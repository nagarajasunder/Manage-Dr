<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ManageDr" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textMediumStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="textHeadingStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="inputFieldStyle" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="textViewRegular" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="textViewSmallPrimary" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="textViewSmallItalic" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="textViewSubtitlePrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle</item>
    </style>

    <style name="textViewMediumItalic" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="cardItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_mode</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="BottomSheetDialogThemeNoFloating" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="inputLayoutStyle" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="boxCollapsedPaddingTop">0dp</item>
    </style>



</resources>